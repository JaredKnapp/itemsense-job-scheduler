            												<PropertyValueFactory property="duration" />
            											</cellValueFactory>
            										</TableColumn>
								<TableColumn prefWidth="77.0" text="Stop Running Jobs">
            											<cellValueFactory>
            												<PropertyValueFactory property="stopRunningJobs" />
            											</cellValueFactory>
            										</TableColumn>
