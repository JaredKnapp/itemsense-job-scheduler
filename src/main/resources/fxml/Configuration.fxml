<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.impinj.itemsense.scheduler.controller.ConfigurationController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <GridPane gridLinesVisible="false">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
	              <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints maxHeight="27.2" minHeight="27.2" prefHeight="27.2" />
               </rowConstraints>
               <children>
                  <Label text="ItemSense Configuration">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </GridPane>
            <SplitPane dividerPositions="0.2" VBox.vgrow="ALWAYS">
              <items>
                  <VBox SplitPane.resizableWithParent="false">
                     <children>
                        <ListView fx:id="lvItemSense" onMouseClicked="#lvItemSense_OnMouseClicked" scaleShape="false" VBox.vgrow="ALWAYS">
                  </ListView>
                        <ButtonBar minHeight="-Infinity" VBox.vgrow="NEVER">
                          <buttons>
                            <Button fx:id="btnNew" mnemonicParsing="false" onAction="#btnNew_OnAction" text="New" />
                          </buttons>
                        </ButtonBar>
                     </children>
                  </VBox>
                  <AnchorPane fx:id="editPane">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </AnchorPane>
              </items>
            </SplitPane>
         </children>
      </VBox>
   </center>
</BorderPane>
